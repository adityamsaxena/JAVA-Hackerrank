import java.util.*;
public class Main
{

	public static void main(String[] args) {
	int i, j, k, limit;

    Scanner scan=new Scanner(System.in);
	limit=scan.nextInt();
	    for(i=1; i<=limit; i++)
	    {
	        for(j=1; j<=(limit-i); j++)
	        {
              System.out.print(" ");	        

	        }
	        for(k=1; k<=(2*i-1); k++)
	        {
              System.out.print("*");	        

	        }
	        System.out.println("");
	    }
	}

}
